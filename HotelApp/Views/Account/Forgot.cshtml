@model HotelApp.Models.Message
@{
    string text = "test";
    if (Model != null)
    {
        if (Model.type == 0)
        { text = "Error"; }
        else
        { text = "Succes"; }
    }
    ViewBag.Title = "Forgot password | Mohijto Soho Hotel.";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="commonDiv">
    <div class="mainWrap">
        @using (Html.BeginForm("Forgot", "Account", FormMethod.Post))
        {
            <fieldset>
                <legend>CREATE NEW PASSWORD</legend>
                <table class="regTable">
                    <tr>
                        <td>
                            <label>E-mail address:</label>
                        </td>
                        <td>
                            @Html.TextBox("forgotEmail", null, new { @type = "email", @placeholder = "Enter your email" })
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <input type="submit" value="Confirm" />
                        </td>
                    </tr>
                    <tr>
                        <td style="text-align: left" colspan="2">
                            <ul id="icons" class="ui-widget ui-helper-clearfix">
                                <li class="ui-state-default ui-corner-all"><span class="ui-icon ui-icon-notice"></span></li>
                                <li>YOUR NEW PASSWORD WILL BE WRITTEN IN ALERT</li>
                            </ul>
                    </tr>
                </table>
            </fieldset>
        }
    </div>
</div>
@if (Model != null)
{
    <script type="text/javascript">
        $(function () {
            $("#dialog-message").dialog({
                modal: true,
                buttons: {
                    Ok: function () {
                        $(this).dialog("close");
                    }
                }
            });
        });
    </script>
    <div id="dialog-message" title="@text">
        <ul id="icons" class="ui-widget ui-helper-clearfix">
            <li class="ui-state-default ui-corner-all"><span class="ui-icon ui-icon-notice"></span></li>
            <li>@Model.text</li>
        </ul>
    </div>
}
