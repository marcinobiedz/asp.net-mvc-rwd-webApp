@model HotelApp.Models.Message
@{
    string text = "test";
    if (Model != null)
    {
        if (Model.type == 0)
        { text = "Error"; }
        else
        { text = "Succes"; }
    }
    ViewBag.Title = "New password | H.";
    Layout = "~/Views/Shared/_Layout.Mobile.cshtml";
}
<div class="ui-field-contain">
    <div class="ui-alt-icon" style="display: inline">
        <a class="ui-btn ui-shadow ui-corner-all ui-icon-eye ui-btn-icon-notext ui-btn-inline"></a>
    </div>
    <div style="display: inline">
        NEW PASSWORD WILL BE IN ALERT
    </div>
</div>
@using (Html.BeginForm("Forgot", "Account", FormMethod.Post))
{
    <div class="ui-field-contain">
        <label for="forgotEmail">Your e-mail address:</label>
        @Html.TextBox("forgotEmail", null, new { @id = "forgotEmail", @type = "email", @placeholder = "Enter your email" })
    </div>
    <div class="ui-field-contain">
        <button type="submit" class="ui-btn ui-icon-recycle ui-btn-icon-right">Remember password</button>
    </div>
}
@if (Model != null)
{
    <div data-role="popup" id="popupBasic" data-icon="delete">
        <a href="#" data-rel="back" data-role="button" data-theme="a" data-icon="delete" data-iconpos="notext" class="ui-btn-right">Close</a>
        <h2>@text</h2>
        <p>@Model.text</p>
    </div>
    <script type="text/javascript">
        $(document).on('pageinit', '.ui-page', function (event) {
            setTimeout(function () {
                $('#popupBasic').popup('open');
            }, 200);
        })
    </script>
}
